{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "/dist",
      "**/*.d.ts"
    ]
  },
  "jsRules": {
    "quotemark": [
      true,
      "single"
    ],
    "semicolon": [
      true,
      "never"
    ],
    "forin": false
  },
  "rules": {
    "semicolon": [
      true,
      "never"
    ],
    "arrow-parens": false,
    "import-spacing": false,
    "quotemark": [
      true,
      "single"
    ],
    "forin": false,
    "no-console": true,
    "no-reference": false,
    "only-arrow-functions": false,
    "interface-name": [
      true,
      "always-prefix"
    ],
    "array-type": false,
    "no-bitwise": false,
    "space-before-function-paren": [
      true,
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "object-literal-sort-keys": false,
    "member-ordering": [
      true,
      {
        "order": [
          "private-instance-field",
          "private-static-field",
          "private-instance-method",
          "private-constructor",
          "public-static-field",
          "public-instance-field",
          "public-constructor",
          "public-instance-method",
          "protected-instance-method"
        ]
      }
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "allow-pascal-case",
      "check-format",
      "allow-leading-underscore"
    ],
    "interface-over-type-literal": false,
    "max-line-length": [
      true,
      100
    ],
    "ban-types": false,
    "no-empty-interface": false,
    "max-classes-per-file": [
      true,
      4
    ],
    "no-shadowed-variable": false,
    "one-variable-per-declaration": false
  },
  "rulesDirectory": []
}